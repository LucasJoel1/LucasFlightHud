{
  "schemaVersion": 1,
  "id": "lucasflighthud",
  "version": "${version}",
  "name": "Lucas's Flight Hud",
  "description": "A mod that adds a basic hud for elytra flight",
  "authors": [
    "LucasJoel1"
  ],
  "contact": {
    "repo": "https://github.com/LucasJoel1/LucasFlightHud",
    "issues": "https://github.com/LucasJoel1/LucasFlightHud/issues",
    "homepage": "https://github.com/LucasJoel1/LucasFlightHud"
  },
  "license": "All-Rights-Reserved",
  "icon": "assets/lucasflighthud/icon.png",
  "environment": "client",
  "entrypoints": {
    "client": [
      "tech.lucasjoel.lucasflighthud.client.LucasFlightHudClient"
    ]
  },
  "mixins": [
    "lucasflighthud.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=${loader_version}",
    "fabric": "*",
    "minecraft": "${minecraft_version}"
  },
  "custom": {
    "modmenu": {
      "update_checker": true
    }
  }
}
